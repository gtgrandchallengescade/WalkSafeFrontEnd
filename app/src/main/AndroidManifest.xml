<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appdevelopment.asathiya.walksafe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/walksafe"
        android:label="@string/app_name"
        android:roundIcon="@drawable/walksafe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CheckGroupPage"></activity>
        <activity android:name=".CheckOutgoingRequestPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage" />
        <activity android:name=".SignUpPage" />
        <activity android:name=".HomePage" />
        <activity android:name=".ProfilePage" />
        <activity android:name=".GroupsPage" />
        <activity android:name=".HistoryPage" />
        <activity android:name=".ScheduleTripPage" />
        <activity android:name=".CheckSentRequestPage" />
        <activity android:name=".RequestPortal" />
    </application>

</manifest>